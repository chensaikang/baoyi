<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="50dp"
     ><!--     android:visibility="gone" -->
     <LinearLayout 
       
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@color/White"
         >
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/White"
        android:background="@color/backcolor"
        android:text="我的订单"/>
    
    <LinearLayout 
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        >
    <ImageView 
        android:id="@+id/iv_orderdetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/arrow2"
        android:scaleType="fitXY"
        />
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout 
         android:id="@+id/detail_layout"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:visibility="gone"
         >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
    <TextView 
        android:id="@+id/cddNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:textColor="@color/txtcolor"
        android:text="合同号："/>
    <TextView 
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/txtcolor"
         android:textSize="16sp"
        android:text="签约日期："/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff2eb"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="18sp"
             android:textColor="@color/Black"
            android:text="卖家"
            android:background="@color/backcolor"/>
        <TextView 
            android:id="@+id/sellName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:layout_marginTop="5dp"
            android:text="名称:"
            />
        <TextView 
            android:id="@+id/sellphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:layout_marginTop="5dp"
            android:text="电话:"
            />
        <TextView 
            android:id="@+id/selladdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:text="地址:"
            android:singleLine="true"
            />
        <TextView 
            android:id="@+id/sellcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:text="邮编:"
            />
          <TextView 
            android:id="@+id/selltax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:text="税号:"
            android:textColor="@color/txtcolor"
            />
        <TextView 
            android:id="@+id/sellmember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="会员代号:"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff2eb"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="买家"
             android:textSize="18sp"
             android:textColor="@color/Black"
            android:background="@color/backcolor"/>
        <TextView 
            android:id="@+id/buyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:text="名称:"
            />
        <TextView 
            android:id="@+id/buyphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="电话:"
            android:textColor="@color/txtcolor"
             android:textSize="16sp"
            />
        <TextView 
            android:id="@+id/buyaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="地址:"
            android:textColor="@color/txtcolor"
            android:singleLine="true"
             android:textSize="16sp"
            />
        <TextView 
            android:id="@+id/buycode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:text="邮编:"
            />
          <TextView 
            android:id="@+id/buytax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
             android:textSize="16sp"
             android:textColor="@color/txtcolor"
            android:text="税号:"
            />
        <TextView 
            android:id="@+id/buymember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="会员代号:"
            android:textColor="@color/txtcolor"
             android:textSize="16sp"
            />
    </LinearLayout>
   <com.by.view.MyListView
        android:id="@+id/order_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
         </LinearLayout>
<View 
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="10dp"
    android:background="#FEC2A1"/>
<RelativeLayout 
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF2EA" 
    android:paddingBottom="50dp">
<TextView 
    android:id="@+id/heji"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
     android:layout_marginLeft="10dp"
     android:textColor="@color/txtcolor"
      android:textSize="18sp"
    android:text="合计："/>
<TextView 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/orderTotal"
    android:layout_marginLeft="10dp"
    android:layout_toRightOf="@+id/heji"
     android:textSize="18sp"
     android:textColor="@color/backcolor"
    android:text="¥1234"/>
<Button 
    android:id="@+id/orderCDD"
    android:layout_width="90dp"
    android:layout_height="40dp"
    android:layout_alignParentRight="true"
     android:layout_marginRight="10dp"
    android:text="合同说明"
     android:textSize="18sp"
    android:textColor="@color/White"
    android:background="@drawable/unclick"/> 
   </RelativeLayout>
  </LinearLayout>
   </LinearLayout>
</ScrollView>
