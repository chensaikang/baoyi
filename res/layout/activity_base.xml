<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfragmentmenu.BaseActivity">

     <RelativeLayout 
         android:id="@+id/fragment"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#F2F2F2"
        ></RelativeLayout>
  <RadioGroup
      android:id="@+id/group"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" 
      android:orientation="horizontal"
      android:layout_alignParentBottom="true"
      android:background="@color/radiogroup"
      android:gravity="center_vertical"
     android:paddingTop="5dp" 
     android:paddingBottom="5dp">

      <RadioButton 
          android:id="@+id/home"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:button="@null"
          android:drawableTop="@drawable/home_icon"
          android:gravity="center_horizontal"
          android:textSize="12sp"
          android:textColor="@color/txt_color"
          android:text="首 页"/>
      <RadioButton 
          android:id="@+id/pm"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="12sp"
          android:button="@null"
          android:gravity="center_horizontal"
          android:drawableTop="@drawable/pm_icon"
          android:textColor="@color/txt_color"
          android:text="挂牌交易"/>
    <RadioButton 
          android:id="@+id/biding"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textSize="12sp"
          android:button="@null"
          android:gravity="center_horizontal"
          android:drawableTop="@drawable/biding_icon"
          android:textColor="@color/txt_color"
          android:text="竞价交易"/>
      <RadioButton 
          android:id="@+id/buyer"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
           android:button="@null"
           android:gravity="center_horizontal"
          android:drawableTop="@drawable/buy_icon"
          android:textColor="@color/txt_color"
          android:textSize="12sp"
          android:text="买家中心"/>
        <RadioButton 
          android:id="@+id/seller"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:button="@null"
          android:gravity="center_horizontal"
          android:drawableTop="@drawable/sell_icon"
          android:textColor="@color/txt_color"
          android:textSize="12sp"
          android:text="卖家中心"/>
      <RadioButton 
          android:id="@+id/set"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
           android:button="@null"
           android:gravity="center_horizontal"
          android:drawableTop="@drawable/set_icon"
          android:textColor="@color/txt_color"
          android:textSize="12sp"
          android:text="个人设置"/>
  </RadioGroup>

</RelativeLayout>
