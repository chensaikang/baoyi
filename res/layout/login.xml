<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <RelativeLayout 
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White"
        >
   <TextView 
       android:id="@+id/tv_login"
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:background="@color/backcolor"
       android:gravity="center"
       android:textColor="@color/White"
       android:textSize="25sp"
       android:text="登  录"/>
       
        <LinearLayout 
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        >
    <ImageView 
        android:id="@+id/iv_log"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/arrow2"
        android:scaleType="fitXY"
        
        />
    </LinearLayout>
        </RelativeLayout>
        <RelativeLayout 
            android:id="@+id/log_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/title"
            android:padding="20dp"
            android:textColor="@color/White"
             >            
             <ImageView 
			        android:id="@+id/photo"
			        android:layout_width="80dp"
			        android:layout_height="80dp"
			        android:background="@drawable/picture_3"
			        android:scaleType="fitXY"
			        android:layout_marginLeft="15dp"
			       android:layout_centerHorizontal="true"
			        android:layout_marginTop="30dp"
			         />
            <TextView 
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_alignBottom="@+id/num_login"
                 android:layout_below="@+id/photo"
                 android:gravity="center_vertical"
                 android:layout_marginTop="40dp"
                android:text="账号："
                android:textSize="20sp"/>
            <EditText 
                android:id="@+id/num_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_num"
                android:background="@drawable/edit_back"
                android:gravity="center_vertical"
                android:singleLine="true"
                 android:textCursorDrawable="@drawable/edit_cursor"
                android:cursorVisible="true"
                 android:layout_below="@+id/photo"
                 android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                 />
             <TextView 
                android:id="@+id/tv_pas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_num"
                android:text="密码："
              android:layout_alignBottom="@+id/pass_login"
              android:gravity="center_vertical"
              android:layout_marginTop="10dp"
                android:textSize="20sp"/>
            <EditText 
                android:id="@+id/pass_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/num_login"
                android:background="@drawable/edit_back"
                android:gravity="center_vertical"
                 android:textCursorDrawable="@drawable/edit_cursor"
                 android:layout_toRightOf="@+id/tv_pas"
                 android:textSize="18sp"
                  android:singleLine="true"
                  android:layout_marginTop="10dp"
                 android:inputType="textPassword"
                 android:layout_marginRight="5dp"
                 
                 />
        </RelativeLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      android:layout_below="@+id/log_ll"
      android:orientation="vertical"
      android:padding="20dp"
    >
        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="登  录"
            android:onClick="onLogin"
            android:textSize="18sp"
            android:textColor="@color/White"
            android:background="@drawable/btn_selector" />
        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/log_ll"
            android:layout_margin="5dp"
            android:text="取  消"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:onClick="onCancel"
            android:background="@drawable/button_cancel_seletor" />
         
</LinearLayout>
</RelativeLayout>
