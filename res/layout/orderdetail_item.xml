<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="#FFFFFF"
    android:padding="5dp"
    >
    <TextView 
      android:id="@+id/item_num"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:textSize="16sp"
      android:text="1"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
  <LinearLayout 
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
  <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
       android:textSize="16sp"
      android:text="产品："/>
  <TextView 
      android:id="@+id/item_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="30dp"
       android:textSize="16sp"
       android:textColor="@color/backcolor"
      android:text="硅钢"/>
 <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginLeft="10dp">
  <TextView 
      android:id="@+id/item_caizhi"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_marginLeft="5dp"
       android:textSize="16sp"
      android:text="35TW300"/>
  <TextView 
      android:id="@+id/item_guige"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_marginLeft="5dp"
       android:textSize="16sp"
      android:text="0.35*965*C"/>
  </LinearLayout>
   </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
   <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
       android:textSize="16sp"
      android:text="参数："/>
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:orientation="vertical"
       >
  <TextView 
      android:id="@+id/item_houdu"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
       android:textSize="16sp"
      android:text="参考厚度："/>
  <TextView 
      android:id="@+id/item_kunbanghao"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
       android:textSize="16sp"
      android:text="捆绑号："/>
  <TextView 
      android:id="@+id/item_wuliaohao"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
       android:textSize="16sp"
      android:text="物料号："/>
   </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
       android:textSize="16sp"
      android:layout_marginTop="5dp"
      android:text="计量："/>
        <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:orientation="vertical"
       >
  <TextView 
      android:id="@+id/item_weightmethod"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
       android:textSize="16sp"
      android:text="计重方式："/>
  <TextView 
      android:id="@+id/item_standard"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
       android:textSize="16sp"
      android:text="执行标准："/>
   </LinearLayout>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
      android:text="仓库："/>
        <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginLeft="30dp"
       android:orientation="vertical"
       >
  <TextView 
      android:id="@+id/item_address"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
       android:textSize="16sp"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
      android:text="台岗仓厂"/>
   </LinearLayout>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
		       android:id="@+id/item_weight"
		      android:layout_width="wrap_content"
		      android:layout_height="wrap_content"
		      android:layout_marginLeft="5dp"
		      android:layout_marginTop="5dp"
		       android:textSize="16sp"
		      android:text="重量(吨)："/>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
       android:textSize="16sp"
      android:text="单价："/>
        <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="30dp"
       >
  <TextView 
      android:id="@+id/item_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:gravity="center_horizontal"
       android:textSize="16sp"
      android:text="¥6120.00"/>
   </LinearLayout>
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView 
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="5dp"
      android:layout_marginTop="5dp"
       android:textSize="16sp"
      android:text="备注："/>
        <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginLeft="30dp"
       >
  <TextView 
      android:id="@+id/item_mark"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
       android:textSize="16sp"
      android:gravity="center_horizontal"/> 
   </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
