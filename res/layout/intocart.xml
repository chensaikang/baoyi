<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@color/White">
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView 
        android:id="@+id/car_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/White"
        android:background="@color/backcolor"
        android:text="添 加 成 功"/>
    
     <LinearLayout 
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        >
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/arrow2"
        android:scaleType="fitXY"
         android:onClick="onBack"
        />
    </LinearLayout>
     </RelativeLayout>
     
     <TextView 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="10dp"
          android:textSize="18sp"
          android:textColor="@color/gray"
         android:text="恭喜您，商品已成功添加到购物车！"/>
     <LinearLayout 
         android:id="@+id/ll_in"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
         
        >
         <TextView
             android:id="@+id/cart_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="18sp"
             android:layout_marginLeft="10dp"
             android:text="热真中厚板"/>
         </LinearLayout>
         <LinearLayout 
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:orientation="vertical"
             android:layout_marginLeft="10dp"
             >
       
             <TextView 
                 android:id="@+id/cart_guige"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="18sp"
                 android:text="规格："/>
             <TextView 
                 android:id="@+id/cart_caizhi"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:textSize="18sp"
                 android:text="材质："/>
             
            
                 <TextView 
                     android:id="@+id/cart_weight"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     
                     android:textSize="18sp"
                     android:text="重量："/>
                  <TextView 
                      android:id="@+id/cart_price"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="18sp"
                     android:text="单价："/>
            
             <TextView 
                 android:id="@+id/cart_totalmoney"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="18sp"
                 android:text="总价："/>
         </LinearLayout>
         
     </LinearLayout>
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_horizontal"
         >
     <Button 
         android:id="@+id/m_tocart"
         android:layout_width="90dp"
         android:layout_height="40dp"
          android:layout_margin="20dp"
          android:textSize="18sp"
         android:background="@drawable/btn_set"
         android:textColor="@color/White"
         android:text="去购物车"/>
     <Button 
         android:id="@+id/m_tobuy"
         android:layout_toRightOf="@+id/m_tocart"
         android:layout_width="90dp"
         android:layout_height="40dp"
          android:layout_margin="20dp"
          android:textSize="18sp"
         android:background="@color/White"
         android:textColor="#C9C9C9"
         android:text="继续购买"/>
</RelativeLayout>
</LinearLayout>
